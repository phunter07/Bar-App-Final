<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackgroundmainwooden"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    tools:context="com.version1_0.ClubCrawl.DrinkSelection" >

    <!--
    Add the editText at the right side of the "userName" text and set its hint 
    and the distance to the "Username" text
    -->

    <EditText
        android:id="@+id/editUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userName"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/userName"
        android:hint="" />

    <!--
    Add the text of "Password" below the text of "Username" and set its size 
    and the distance to the "Username" text
    -->

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/userName"
        android:layout_marginTop="30dp"
        android:text="@string/password"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--
    Add the editText at the right side of the "Password" text and set its hint 
    and the distance to the "Password" text, it also make the input type as a password
    -->

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/password"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/password"
        android:hint=""
        android:inputType="textPassword" />

    <!--
    Add the text of "AttemptsLeft" below the text of "Password" and set its size 
    and the distance to the "Username" text 
    -->


    <!--
    Add the Text at the right side of the "AttemptsLeft" text and set its size 
    and the distance to the "AttemptsLeft" text
    -->

    <TextView
        android:id="@+id/leftNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/attemptsLeft"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:text="@string/leftNmber"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--
    Add the button below the text of "AttemptsLeft" and set its distance 
    to the "AttemptsLeft" text
    -->

    <TextView
        android:id="@+id/pleaseLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp"
        android:text="@string/please_login"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/pleaseLogin"
        android:layout_marginTop="31dp"
        android:text="@string/username"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/attemptsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="17dp"
        android:text="@string/attempts_left"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/pleaseLogin"
        android:layout_alignTop="@+id/helpButton1"
        android:background="@drawable/mainheaderlogo"
        android:orientation="vertical" >
    </LinearLayout>

    <ImageButton
        android:id="@+id/helpButton1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:src="@drawable/helpbutton" />

    <Button
        android:id="@+id/loginNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register"
        android:layout_alignRight="@+id/register"
        android:layout_below="@+id/leftNumber"
        android:layout_marginTop="28dp"
        android:background="@drawable/redbutton"
        android:text="Login"
        />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/loginNow"
        android:layout_marginTop="24dp"
        android:background="@drawable/redbutton"
        android:text="Register"
         />
    
</RelativeLayout>