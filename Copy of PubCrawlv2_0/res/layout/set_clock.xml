<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:shrinkColumns="0,1" >

    <TextView
        android:id="@+id/TV1_activityMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="I will stay here"
        android:layout_weight="1"
        android:textSize="30sp" />

    <TableRow
        android:layout_weight="1">

        <Button
            android:id="@+id/B30minutes_activityMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="30 Minutes" />

        <Button
            android:id="@+id/B45minutes_activityMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="45 Minutes" />
    </TableRow>

    <TableRow
        android:layout_weight="1">

        <Button
            android:id="@+id/B1hour_activityMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="1 Hour" />

        <Button
            android:id="@+id/B1_5hour_activityMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="1.5 Hours" />
    </TableRow>

    <Button
        android:id="@+id/BsetBySelf_activityMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:text="Set by myself" />
    <TextView
        android:id="@+id/TVleave_activityMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="I will leave at :"
        android:layout_weight="2"
        android:textSize="30sp" />


</TableLayout>